{
  "name": "nodejs-express-boilerplate",
  "version": "1.0.0",
  "description": "npm init -y npm install --save-dev typescript @types/node @types/express nodemon npm install --save-dev nodemon ts-node npm install express npx tsc --init npm i ts-node-dev --save-dev",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev:ts-node-dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "express": "^4.21.1"
  }
}
